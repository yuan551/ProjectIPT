@model ProjectIPT.Models.RegistrationViewModel
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/ReCommerceLayout.cshtml";
    // This view does not need the main header
    ViewBag.ShowHeader = false;
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="row w-100">
        <div class="col-md-9 mx-auto d-flex flex-wrap justify-content-center">

            <div class="col-12 col-lg-5 d-flex justify-content-center align-items-center p-4">
                <div class="recom-box-border w-75" style="aspect-ratio: 1 / 1;">
                    <div class="d-flex flex-column h-100 justify-content-center align-items-center">
                        <img src="/images/recommerce-logo.png" alt="RE-COMMERCE Logo" class="img-fluid" style="max-height: 50%;">
                        <span class="mt-2 text-secondary recom-heading">RE-COMMERCE</span>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-7 p-4">
                <div class="recom-form-container">
                    <h2 class="text-center mb-4 recom-heading">Create your own account</h2>

                    <form asp-controller="Account" asp-action="Register" method="post">

                        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                        {
                                <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                                </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input type="text" class="form-control" name="FirstName" placeholder="First Name" required>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input type="text" class="form-control" name="LastName" placeholder="Last Name" required>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <input type="text" class="form-control" name="MiddleInitial" placeholder="Middle Initial (optional)">
                            <span asp-validation-for="MiddleInitial" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="tel" class="form-control" name="ContactNo" placeholder="Contact No." required>
                            <span asp-validation-for="ContactNo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" name="EmailAddress" placeholder="Email Address" required>
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" name="Password" placeholder="Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" name="ConfirmPassword" placeholder="Re-enter password" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-recom-primary">Sign Up</button>
                        </div>

                        <div class="text-center small mt-3">
                            Already have an account? 
                            <a href="/ReCommerce/Login" class="text-dark text-decoration-none ms-2">
                                <button type="button" class="btn btn-outline-dark btn-sm recom-heading">Login</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}